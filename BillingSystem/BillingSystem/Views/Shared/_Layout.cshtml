<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- icon & title -->
    <link rel="icon" href="@Url.Content("~/content/cash-coin.svg")" />
    <title> 記帳系統 </title>

    <!-- import bootstrap4(bootstrap/icon/CSS) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="@Url.Content("~/Content/layout-stylesheet.css")" />

    <!-- import jquery library & popper JS & JS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/JavaScript.js"></script>

</head>
<body>
    <!-- 固定顯示的部分 -->
    <div id="layout_div01">
        <h4 id="layout_head01"> <i class="bi bi-pencil-square"></i> 快速記帳 </h4>
    </div>

    <!-- 頁面分2部分: 左:選擇功能/右:近期收支 -->
    <div class="container-fluid">
        <div class="row">
            <!-- 選擇功能 -->
            <div class="col">
                <ul class="nav nav-tabs nav-justified" id="layout_ul01">
                    <li class="nav-item">
                        <a class="nav-link active"> 來記帳 </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("PieChart", "Home")"> 收支圓餅圖 </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Surplus", "Home")"> 本月盈餘 </a>
                    </li>
                </ul>
                <!-- 功能:記帳 -->
                <div class="container-fluid" id="layout_div02">
                    <div class="row">
                        <div class="col">
                            <h4 id="layout_head02"> <i class="bi bi-calendar"></i> 選擇日期 </h4>
                            <input type="date" class="form-control" id="date" name="date">

                            <h4 id="layout_head03"> <i class="bi bi-cart-plus-fill"></i> 選擇類別 </h4>
                            <div class="dropdown" id="layout_div03">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" id="classselect">
                                    <i class="bi bi-card-list"></i> 類別
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#"> <i class="bi bi-cash"></i> 薪資 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-coin"></i> 兼職 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-bank2"></i> 利息 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-egg-fried"></i> 食物 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-shop"></i> 衣服 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-house-door-fill"></i> 居住 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-stoplights-fill"></i> 交通 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-book-half"></i> 學習 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-controller"></i> 娛樂 </a>
                                    <a class="dropdown-item" href="#"> <i class="bi bi-dash"></i> 雜項 </a>
                                </div>
                            </div>

                            <h4 id="layout_head04"> <i class="bi bi-list"></i> 品項 </h4>
                            <form>
                                <div class="form-group">
                                    <label for="itemname"> <i class="bi bi-file-earmark-minus-fill"></i> 名稱: </label>
                                    <input type="text" class="form-control" id="name" name="itemname">
                                </div>
                                <div class="form-group">
                                    <label for="price"> <i class="bi bi-currency-dollar"></i> 價錢: </label>
                                    <input type="number" class="form-control" id="price" name="itemprice">
                                </div>
                            </form>

                            <div class="container" id="layout_div04">
                                <button type="button" class="btn btn-info" id="newitem"> <i class="bi bi-plus-lg"></i> 新增 </button>
                            </div>
                        </div>
                        <div class="col" id="layout_div05">
                            <h4 id="layout_head05"> <i class="bi bi-clock"></i> 輸入時間 </h4>
                            <form>
                                <input type="time" class="form-control" id="time" name="time">
                            </form>

                            <h4 id="layout_head06"> <i class="bi bi-chat-text-fill"></i> 備註 </h4>
                            <textarea class="form-control" id="comment" rows="5"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">

            </div>
        </div>
    </div>

    @RenderBody()
    <hr />
    <footer>
        <p>&copy; 2022 - 快速記帳</p>
    </footer>

    <!-- jQuery & JS 實作 -->
    <script>
        $('.dropdown-menu .dropdown-item').on('click',function () {
            $('.dropdown-toggle').html($(this).html());
        });

        $('#layout_div04').on('click', function () {
            item.thedate = document.getElementById("date").value + ' ' + document.getElementById("time").value;
            item.name = document.getElementById("name").value;
            item.price = document.getElementById("price").value;
            item.comments = document.getElementById("comment").value;
      
        });
    </script>
</body>
</html>
